<Window x:Class="HealthCare_System.GUI.SecretaryView.DelayedAppointmentNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCare_System.gui"
        mc:Ignorable="d"
        Title="Notifications" Height="350" Width="500">
    <Grid>
        <Label Name="label" Content="NOTIFICATIONS" HorizontalContentAlignment="Center" FontStyle="Oblique" FontSize="26" HorizontalAlignment="Center" Height="40" Margin="0,10,0,0" VerticalAlignment="Top" Width="400"/>
        <ListBox x:Name="listBoxNotifications" HorizontalAlignment="Center" Margin="0,60,0,0" Width="500" Height="200" VerticalAlignment="Top"/>
        <Button Name="closeBtn" VerticalAlignment="Bottom" Height="33" Width="100" Margin="0,0,0,20" HorizontalAlignment="Center" Content="Close" FontSize="18" Click="closeBtn_Click"/>
    </Grid>
</Window>
