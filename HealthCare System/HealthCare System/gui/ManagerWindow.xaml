<Window x:Class="HealthCare_System.gui.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCare_System.gui"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="482" Width="886">
    <Grid>

        <TabControl>
            <TabItem Header="Drugs" FontSize="20" FontWeight="Bold">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="41*"/>
                        <ColumnDefinition Width="851*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Create New" HorizontalAlignment="Left" Margin="28,24,0,0" VerticalAlignment="Top" Height="45" Width="160" Grid.Column="1" AutomationProperties.Name="newDrugBtn"/>
                    <Button Content="Update" HorizontalAlignment="Left" Margin="304,353,0,0" VerticalAlignment="Top" Height="40" Width="142" Grid.Column="1" AutomationProperties.Name="updateDrugBtn"/>
                    <Button Content="Delete" HorizontalAlignment="Left" Margin="612,353,0,0" VerticalAlignment="Top" Height="40" Width="142" Grid.Column="1" AutomationProperties.Name="deleteDrugBtn" Click="Button_Click"/>
                    <ListBox Margin="266,24,63,0" Height="300" VerticalAlignment="Top" Grid.Column="1"/>
                    <Button Content="View Rejected" Grid.Column="1" HorizontalAlignment="Left" Margin="28,112,0,0" VerticalAlignment="Top" Height="46" Width="160" AutomationProperties.Name="rejectedDrugsBtn"/>
                </Grid>
            </TabItem>
            <TabItem Header="Rooms" FontSize="20" FontWeight="Bold">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="92*"/>
                    </Grid.ColumnDefinitions>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
