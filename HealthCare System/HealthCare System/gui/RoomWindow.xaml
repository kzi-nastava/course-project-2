<Window x:Class="HealthCare_System.gui.RoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCare_System.gui"
        mc:Ignorable="d"
        Title="RoomWindow" Height="276" Width="385">
    <Grid Margin="0,0,0,4">
        <Label x:Name="TitleLbl" Content="Label" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.487,0.514" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="NameTb" HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" Height="18" FontWeight="Bold"/>
        <ComboBox x:Name="TypeCb" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Width="201" FontWeight="Bold"/>
        <Button x:Name="SubmitBtn" Content="Submit" HorizontalAlignment="Center" Margin="0,181,0,0" VerticalAlignment="Top" Width="81" Height="28" FontSize="15" FontWeight="Bold" Click="SubmitBtn_Click"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="14,84,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Bold"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="14,131,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Bold"/>

    </Grid>
</Window>
